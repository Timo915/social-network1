async function loadMyStories() {
    const myUserId = "67222a945cd15ee28b56b886"; // –ó–∞–º–µ–Ω–∏—Ç–µ –Ω–∞ –≤–∞—à ID
    console.log(`–ó–∞–≥—Ä—É–∑–∫–∞ –∏—Å—Ç–æ—Ä–∏–π –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è —Å ID: ${myUserId}`);

    try {
        const response = await fetch(`http://localhost:5000/api/stories/user/${myUserId}`);
        if (!response.ok) {
            throw new Error(`–û—à–∏–±–∫–∞: ${response.status} ${response.statusText}`);
        }
        const stories = await response.json();
        console.log('–ò—Å—Ç–æ—Ä–∏–∏ –∑–∞–≥—Ä—É–∂–µ–Ω—ã:', stories);

        const storiesList = document.getElementById('my-stories-list');
        storiesList.innerHTML = ''; // –û—á–∏—Å—Ç–∏—Ç—å –ø—Ä–µ–¥—ã–¥—É—â–∏–µ –∏—Å—Ç–æ—Ä–∏–∏

        if (stories.length === 0) {
            storiesList.innerHTML = '<li>–£ –≤–∞—Å –Ω–µ—Ç –∏—Å—Ç–æ—Ä–∏–π.</li>';
            return;
        }

        stories.forEach(story => {
            // –°–æ–∑–¥–∞–µ–º –∫–∞—Ä—Ç–æ—á–∫—É –¥–ª—è –∫–∞–∂–¥–æ–π –∏—Å—Ç–æ—Ä–∏–∏
            const storyCard = document.createElement('li');
            storyCard.className = 'story-card';

            // –°–æ–∑–¥–∞–µ–º —ç–ª–µ–º–µ–Ω—Ç –≤–∏–¥–µ–æ
            const videoElement = document.createElement('video');
            videoElement.src = story.videoUrl;
            videoElement.controls = true;

            storyCard.appendChild(videoElement);
            storiesList.appendChild(storyCard);
        });
    } catch (error) {
        console.error('–û—à–∏–±–∫–∞ –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ –∏—Å—Ç–æ—Ä–∏–π:', error.message);
    }
}

// –í—ã–∑–æ–≤–∏—Ç–µ loadMyStories –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
document.addEventListener('DOMContentLoaded', loadMyStories);

// –í—ã–∑–æ–≤ —Ñ—É–Ω–∫—Ü–∏–∏ –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
document.addEventListener("DOMContentLoaded", () => {
    const userId = "67222a945cd15ee28b56b886"; // –ó–∞–º–µ–Ω–∏ –Ω–∞ –∞–∫—Ç—É–∞–ª—å–Ω—ã–π userId
    loadMyStories(userId);
});
    </script>
